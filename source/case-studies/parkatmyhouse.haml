          = image_tag 'case-studies/example/detail-dropdown.png', width: 290, height: 290, class: 'detail-zoom'
        %div
          = image_tag 'case-studies/example/detail-share.png', width: 290, height: 290, class: 'detail-zoom'
      %div.section.flexbox.flexbox--justify
        %div
          = image_tag 'case-studies/example/detail-checkin.png', width: 290, height: 290, class: 'detail-zoom'
        %div
          = image_tag 'case-studies/example/detail-form.png', width: 290, height: 290, class: 'detail-zoom'
        %div
          = image_tag 'case-studies/example/detail-search.png', width: 290, height: 290, class: 'detail-zoom'

