%section.hero
  %div.fixed--bottom
    %div.section.container.padding-bottom-none
      %h1= data.contact.title

      %div.section.separator-top

        %p.p--intro= data.contact.message

        %div.container
          %div.span-2
            %a.btn.btn--primary.btn--icon.btn--icon-right.icon--down{:href => "#learnmore"} Learn more
